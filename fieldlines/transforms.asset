local assetHelper = asset.require('util/asset_helper')
local sunTransforms = asset.require('scene/solarsystem/sun/transforms')
local earthTransforms = asset.require('scene/solarsystem/planets/earth/transforms')



local HNMKernel = asset.localResource("kernels/HNM.tf")
local GSMKernel = asset.localResource("kernels/GSM.ti")

local HNMReferenceFrame = {
    Name = "HNMReferenceFrame",
    Parent = sunTransforms.SolarSystemBarycenter.Name,
    Transform = {
        Rotation = {
            Type = "SpiceRotation",
            SourceFrame = "HEEQ180",
            DestinationFrame = "GALACTIC",
            Kernels = HNMKernel
        }
    }
}

local GSMReferenceFrame = {
    Name = "GSMReferenceFrame",
    Parent = earthTransforms.EarthBarycenter.Name,
    Transform = {
        Rotation = {
            Type = "SpiceRotation",
            SourceFrame = "GSM",
            DestinationFrame = "GALACTIC",
            Kernels = GSMKernel
        }
    }
}



local objects = { HNMReferenceFrame, GSMReferenceFrame }
assetHelper.registerSceneGraphNodesAndExport(asset, objects)
